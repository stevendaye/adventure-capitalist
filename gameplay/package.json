{
  "name": "gameplay-backend",
  "version": "1.0.0",
  "description": "Adventure Capitalist gameplay platform",
  "main": "app.js",
  "scripts": {
    "start": "USER_MICROSERVICE_HOST=https://adventure-capitalist-users.herokuapp.com babel-node app.js",
    "server": "cross-env DEBUG=adventure-capitalist-gameplay:* USER_MICROSERVICE_HOST=http://localhost:5050 nodemon --exec babel-node app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.18.2",
    "express-validator": "^6.4.0",
    "fs-extra": "^9.0.0",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.11",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^2.0.2",
    "superagent": "^5.2.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.3"
  }
}
